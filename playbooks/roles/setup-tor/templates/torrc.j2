# torrc
# {{ ansible_managed }}

BridgeRelay 1

# obfs4 does not work with sandbox
SandBox 0

ORPort 127.0.0.1:auto
AssumeReachable 1
ExtORPort auto
ServerTransportPlugin obfs4 exec /usr/bin/obfs4proxy
ServerTransportListenAddr obfs4 0.0.0.0:{{ obfs4_port }}

{% if (metrics_port | int > 0) and (metrics_port | int < 2**16) %}
MetricsPort 127.0.0.1:9052
MetricsPortPolicy accept 127.0.0.1
{% if prometheus_server is ansible.utils.ipv4 %}
MetricsPortPolicy accept {{ prometheus_server }}
{% endif %}
{% endif %}

{% if defined bridge_distribution %}
BridgeDistribution {{ bridge_distribution }}
{% endif %}
{% for item in torrc_config %}
{% if item.value != '' %}
{{ item.name }} {{ item.value }}
{% endif %}
{% endfor %}
