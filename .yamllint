---
# https://yamllint.readthedocs.io/en/stable/configuration.html

extends: default

ignore: |
  site-info.yaml
  site-setup.yaml

rules:
  braces:
    max-spaces-inside: 1
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  line-length:
    max: 130
  octal-values:
    forbid-explicit-octal: true
    forbid-implicit-octal: true
